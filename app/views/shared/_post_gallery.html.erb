<% list_to_grid(@posts, 3).each do |row| %>

  <div class="row mb-5">

    <% row.each do |post| %>

      <div class="col-sm-12 col-md-4">
        <div class="card shadow-sm">

          <% if post.image.attached? %>
            <img class="card-img-top" src="<%= url_for(post.image) %>">
          <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, post %></h5>
          </div>
        </div>
      </div>

    <% end %>

  </div>

<% end %>